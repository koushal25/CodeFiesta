  <script>
  var startTime = localStorage.getItem("startTime");
        var timeLimit = 5 * 60 * 1000; // 1 minute in milliseconds
        var countdownElement = document.getElementById("countdown");

        function updateCountdown() {
            var currentTime = new Date().getTime();
            var timeElapsed = currentTime - startTime;
            var timeRemaining = timeLimit - timeElapsed;


            if (timeRemaining <= 10*1000) 
              {
                countdownElement.style.color="white"
                countdownElement.style.background="red";
              }

            if (timeRemaining <= 0) {
              countdownElement.style.fontWeight="bold";
              countdownElement.style.fontSize="25px";
            countdownElement.innerHTML = "Time's up!";
            


            localStorage.removeItem("timer");

            } else {
            var minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
            var seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);
            countdownElement.innerHTML = "Time remaining: " + minutes + "m " + seconds + "s";
            localStorage.setItem("timer", "active");
            }
        }

        function resetTimer(event) {
            event.preventDefault();
            startTime = new Date().getTime();
            localStorage.setItem("startTime", startTime);
            localStorage.removeItem("timer");
        }
        // Check if the timer is still active after refreshing the page
        if (localStorage.getItem("timer") === "active") {
            setInterval(updateCountdown, 1000);
        } else {
            startTime = new Date().getTime();
            localStorage.setItem("startTime", startTime);
            setInterval(updateCountdown, 1000);
        }

        // Add event listener to reset button
        var resetButton = document.querySelector("input[type=submit]");
        resetButton.addEventListener("click", resetTimer);
        </script>

